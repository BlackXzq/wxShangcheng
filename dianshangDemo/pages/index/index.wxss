
.index-container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper-setion {
  width: 750rpx;
  position: relative;
}

.swiper-box {
  width: 100%;
  height: 500rpx;
}

.swiper-box .slide-image {
  width: 100%;
  height: 100%;
}


.searchContent {
  background-color: rgba(105,195,170, 0.3);
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  position: fixed;
}

.searchBar {
  margin: 20rpx 50rpx 20rpx 50rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: white;
  border-radius: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.searchBar .search-icon {
  padding: 10rpx 20rpx 10rpx 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.searchBar .search-input {
  padding: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  width: 380rpx;
}

.searchBar .search-btn {
  height: 70rpx;
  line-height: 70rpx;
  width: 150rpx;
  margin-right: 0rpx;
  font-size: 28rpx;
  border: none;
  background-color: blueviolet;
  color: white;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;

}

.type-scrollView {
  width: 100%;
  height: 88rpx;
  background-color: white;
  white-space: nowrap;
}

.type-box {
  width: 150rpx;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;  
  font-size: 28rpx;
  box-sizing: content-box;
}

.type-item {
  border-bottom: 4rpx solid #fff;
}

.type-item.active {
  border-bottom: 4rpx solid #e64340;
}

.notice-section {
  margin-top: 10rpx;
  background-color: white; 
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex; 
  flex-direction: row; 
  position: relative;
}

.notice-title {
  font-size: 28rpx;
  color: #999999;
  height: 100%;
  width: 120rpx;
  text-align: center;
}

.notice-swiper {
  height: 100%;
  color: red;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  left: 120rpx;
  top: 0;
  right: 0;
  bottom: 0;
}

.coupons-scrollview {
  width: 100%;
  background-color: white;
  white-space: nowrap;
}

.coupons-item {
  background-color: yellowgreen;
  margin: 10rpx;
  width: 300rpx;
  display: inline-block;
  font-size: 20rpx;
  color: white;
  padding-left:15rpx;
  border-radius: 6rpx;
  box-sizing: content-box;
}

.coupons-item-price {
  font-size: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 2rpx;
}

.coupons-item-tip {
  padding-bottom: 2rpx;
}

.coupons-item-full {
  padding-bottom: 2rpx;
}

.coupons-item-valid {
  padding-bottom: 15rpx;
}

.goods-section {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
}

.goodItem {
  width: 340rpx;
  height: 472rpx;
  background-color: white;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.goodImg {
  width: 340rpx;
  height: 340rpx;
  overflow: hidden;
}

.goodName {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 20rpx 0 0 0;
  color: #000;
  margin-left: 24rpx;
}
 
.goodPriceContent {
  margin: 20rpx;
  width: 300rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goodPrice {
  color: red;
  width: 50%;
  font-size: 30rpx;
}

.goodOriPrice {
  text-align: right;
  width: 50%;
  color: #999999;
  text-decoration: line-through;
}

.nodata {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}