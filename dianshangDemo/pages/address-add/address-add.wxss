
page {
  background-color: #f2f2f2;
}

.form-box {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
}

.row-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding-right: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  font-size: 24rpx;
  position: relative;
}

.row-wrap input {
  position: absolute;
  height: 80rpx;
  line-height: 80rpx;
  left: 150rpx;
  top: 0;
  bottom: 0;
  right: 50rpx;
}