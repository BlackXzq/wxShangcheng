
.goodsDetailContainer {
  margin-bottom: 100rpx;
}

.section {
  border-bottom: 20rpx solid #f2f2f2;
}

.swiper-box {
  width: 100%;
  height: 700rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}
.goods-info {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.info-contain {
  position: absolute;
  box-sizing: border-box;  
  width: 650rpx;
  height: 180rpx;
  padding: 20rpx;
}

.info-contain .info-title {
  font-size: 30rpx;
  padding-top: 10rpx;
}

.info-contain .info-detail {
  display: flex;
  font-size: 24rpx;
  padding-top: 30rpx;
  justify-content: space-between;
  color: #999999;
  font-weight: bold;
}

.info-contain .info-detail .info-price {
  color: red;
  font-size: 26rpx;
}

.info-contain .info-detail .info-oriprice {
  text-decoration: line-through;
}

.info-share {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-share button {
  opacity: 0;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  position: absolute;
}

.info-share .share-img {
  width: 60rpx;
  height: 60rpx;
  padding-top: 20rpx;
}

.info-share .share-txt {
  padding-top: 5rpx;
  font-size: 20rpx;
}

.selecttype-SC {
  padding: 30rpx;
  font-size: 30rpx;
  background: #fff url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 705rpx center;
    background-size: 20rpx auto;
}

.goodsJS {
  width: 100%;
  box-sizing: border-box;
}

.goodsJS-title {
  font-size: 28rpx;
  padding: 30rpx;
}

.goodsJS-text {
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0 0 8rpx 0;
  justify-content: space-around;
}

.footer-left {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  justify-content: space-around;
}

.footer-left-kefu {
  width: 125rpx;
  height: 100rpx;
  color: #008000;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  font-size: 20rpx;
}

.footer-left-kefu button {
  position: absolute;
  width: 125rpx;
  height: 100rpx;
  opacity: 0;  
  z-index: 2;
}

.footer-left-kefu image {
  top: 20rpx;
  width: 55rpx;
  height: 55rpx;
  position: absolute;
}

.footer-left-kefu view {
  height: 30rpx;
  position: absolute;
  bottom: 40rpx;
}

.footer-left-cart {
  width: 125rpx;
  height: 100rpx;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  font-size: 20rpx;
}

.footer-left-cart image {
  top: 20rpx;
  width: 55rpx;
  height: 55rpx;
  position: absolute;
}

.footer-left-cart view {
  height: 30rpx;
  position: absolute;
  bottom: 40rpx;
}


.footer-mid {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: orange;  
  text-align: center;
  color: white;
  font-size: 32rpx;

}

.footer-right {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: red;
  text-align: center;
  color: white;
  font-size: 32rpx;
}

.show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 6;
}

.pop-goods-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.pop-img-box {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}

.pop-img-box .goods-thumbnail {
  width: 120rpx;
  height: 120rpx;
}

.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
}

.pop-goods-price {
  font-size: 26rpx;
  color: #e64340;
  margin-top: 20rpx;
}

.pop-goods-close {
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background: url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  align-self: flex-start; 
  margin-top: -10rpx;
}

.size-label-box .label {
  font-size: 26rpx;
  padding: 30rpx 0 20rpx 30rpx;
}

.size-label-box .label-item-box {
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
}

.size-label-box .label-item {
  font-size: 26rpx;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
  color: #000000;
}

.size-label-box .label-item.active{
  color: #e64340;
  border: 1px solid #e64340;
}

.buy-num-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 48rpx 0;
  margin-left: 30rpx;
  border-top: 1px solid #eee;
  margin-top: 30rpx;
  align-items: center;
}

.num-label {
  font-size: 26rpx;
}

.buy-num-box .num-box {
  display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
  font-size: 28rpx;
}

.buy-num-box .num-box .num-input input {
  height: 100%;
}

.buy-num-box .num-box .hui {
   background-color: #f5f5f9;
}

.popup-join-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #e64340;
  color: white;
  font-size: 34rpx;
  text-align: center;
}