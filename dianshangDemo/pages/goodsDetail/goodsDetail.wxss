
.goodsDetailContainer {
  margin-bottom: 100rpx;
}

.section {
  border-bottom: 20rpx solid #f2f2f2;
}

.swiper-box {
  width: 100%;
  height: 700rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}
.goods-info {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.info-contain {
  position: absolute;
  box-sizing: border-box;  
  width: 650rpx;
  height: 180rpx;
  padding: 20rpx;
}

.info-contain .info-title {
  font-size: 30rpx;
  padding-top: 10rpx;
}

.info-contain .info-detail {
  display: flex;
  font-size: 24rpx;
  padding-top: 30rpx;
  justify-content: space-between;
  color: #999999;
  font-weight: bold;
}

.info-contain .info-detail .info-price {
  color: red;
  font-size: 26rpx;
}

.info-contain .info-detail .info-oriprice {
  text-decoration: line-through;
}

.info-share {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-share .share-img {
  width: 60rpx;
  height: 60rpx;
  padding-top: 20rpx;
}

.info-share .share-txt {
  padding-top: 5rpx;
  font-size: 20rpx;
}

.selecttype-SC {
  padding: 30rpx;
  font-size: 30rpx;
  background: #fff url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 705rpx center;
    background-size: 20rpx auto;
}

.goodsJS {
  width: 100%;
  box-sizing: border-box;
}

.goodsJS-title {
  font-size: 28rpx;
  padding: 30rpx;
}

.goodsJS-text {
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0 0 8rpx 0;
  justify-content: space-around;
}

.footer-left {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  justify-content: space-around;
}

.footer-left-kefu {
  width: 125rpx;
  height: 100rpx;
  color: #008000;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  font-size: 20rpx;
}

.footer-left-kefu image {
  top: 20rpx;
  width: 55rpx;
  height: 55rpx;
  position: absolute;
}

.footer-left-kefu view {
  height: 30rpx;
  position: absolute;
  bottom: 40rpx;
}

.footer-left-cart {
  width: 125rpx;
  height: 100rpx;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  font-size: 20rpx;
}

.footer-left-cart image {
  top: 20rpx;
  width: 55rpx;
  height: 55rpx;
  position: absolute;
}

.footer-left-cart view {
  height: 30rpx;
  position: absolute;
  bottom: 40rpx;
}


.footer-mid {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: orange;  
  text-align: center;
  color: white;
  font-size: 32rpx;

}

.footer-right {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: red;
  text-align: center;
  color: white;
  font-size: 32rpx;
}