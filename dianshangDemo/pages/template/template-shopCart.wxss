
.nonegoods {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nonegoods image {
  margin-top: 200rpx;
  width: 100rpx;
  height: 100rpx;
}

.nonegoods-text {
  margin:20rpx;
  font-size: 12px;
  color: #999;
}

.nonegoods button {
  margin: 30rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
}

.list-top {
  padding: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
}

.goodsList {
  width: 100%;
  background-color: #fff;
  padding-bottom: 100rpx;
}

.item {
  width: 100%;
  overflow: hidden;
}

.item-content {
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  width: 870rpx;
  box-sizing: border-box;
  transition: margin-left 0.2s ease-in-out;
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
  background-size: 40rpx auto; 
}

.goods-info {
  display: flex;
  border-bottom: 1px solid #eee;
  justify-content: space-between; 
  padding: 30rpx 0 30rpx 70rpx;
  width: 720rpx;
  box-sizing: border-box;
}

.img-box{
    width: 160rpx;
    height:160rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #d8d8d8;
}

.text-box{
    width: 440rpx;
    position: relative;
}

.text-box .goods-title{
    font-size: 30rpx;
    color:#000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    padding: 10rpx 20rpx 5rpx 0;
}

.text-box .goods-label {
  font-size: 24rpx;  
  color: #999;
  height: 38rpx;
  line-height: 38rpx;
  margin: 8rpx 0 25rpx 0;
}

.text-box .goods-price {
  font-size: 26rpx;
  color: #e64340;
}

.text-box .buy-num {
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 30rpx;
  bottom: 0;
  font-size: 24rpx;
  display: flex;
  text-align: center;
}

.text-box .buy-num .jian-btn {
  width: 48rpx;
  height: 100%;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
}

.text-box .buy-num .jian-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.text-box .buy-num .jia-btn {
  width: 48rpx;
  height: 100%;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.text-box .buy-num .jia-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.text-box .buy-num input {
  width: 68rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
}

.img-box .img {
  width: 160rpx;
  height: 160rpx;
}